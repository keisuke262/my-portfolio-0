<div class="container" id="user-show">
<div class="row">
    <aside class="col-sm-4">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <p>写真が入ります</p>
                </div><!--写真が入ります-->
            </div>
            <div class="card-body">
                <p>Name: <%= @user.name %></p>
                <p>Goal : <%= @user.goal %></p>
                <p>Achieve : <%= @user.achieve %></p>
            </div>
        </div>
    </aside>
    <div class="col-sm-8">
        <ul class="nav nav-tabs nav-justified">
            <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Posts<span class="badge badge-secondary"><%= @count_posts %></span></a></li>
            <li class="nav-item"><a href="" class="nav-link">Followings</li>
            <li class="nav-item"><a href="" class="nav-link">Followers</li>
            <li class="nav-item"><a href="" class="nav-link">Favorites</li>
        </ul>
        <%= render 'posts/posts', posts: @posts %>
    </div>
</div>
</div>
