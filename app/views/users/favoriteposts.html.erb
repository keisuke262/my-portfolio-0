<div class="container" id="user-show">
    <div class="row">
        <div class="col-sm-3">
        <!--登録数の表示-->
            <div class="badge badge-info"><%= @count_posts %></div>
            <p>シルバー</p>
            <p>レベルアップまであと30個</p>
            <p>写真が入ります</p>
            <div>
                <p>Name: <%= @user.name %></p>
                <p>Goal : <%= @user.goal %></p>
                <p>Achieve : <%= @user.achieve %></p>
            </div>
            <div>
                <% if current_user == @user %>
                    <%= link_to "Edit the profile", edit_user_path(@user), class: 'btn btn-info btn-sm' %>
                <% end %>
            </div>
            <%= render 'relationships/follow_button', user: @user %>
        </div>
        <div class="col-sm-9">
            <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-body">
                <!-- modal open -->
                    <h5 class="card-title">Post your original phrase</h5>
                    <p class="card-text"><a class="js-modal-open" href="" data-target="modal01">Post</a></p>
                </div>
            </div>
            <!-- modal -->
            <div id="modal01" class="c-modal js-modal">
            <div class="c-modal_bg js-modal-close"></div>
                <div class="c-modal_content _lg">
                    <div class="c-modal_content_inner">
                        <p>Post your original phrase</p>
                        <%= form_with(model: @post, local: true) do |f| %>
                            <div class="form-group">
                                <%= f.text_area :content, class: 'form-control', rows: 5 %>
                            </div>
                            <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
                        <% end %>
                        <a class="js-modal-close c-modal_close" href=""><span>閉じる</span></a>
                    </div>
                </div>
            </div>
            <ul class="nav nav-tabs nav-justified">
                <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Posts</a></li>
                <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">Followings <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
                <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">Followers <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
                <li class="nav-item"><a href="<%= favoriteposts_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(favoriteposts_user_path(@user)) %>">Favorite <span class="badge badge-secondary"><%= @count_favoriteposts %></span></a></li>
            </ul>
            <%= render 'posts/posts', posts: @favoriteposts %>
        </div>
    </div>
</div>
