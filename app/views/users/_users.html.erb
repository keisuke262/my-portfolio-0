<!--ユーザ一覧はユーザ一覧ページ・followページ・followerページで必要なのでパーシャル化しておく-->
<% if users.any? %>
<!--list-unstyledはBootstrapで、左側の余白をなくし, 黒点を消すことができる-->
    <ul class="list-unstyled">
        <% users.each do |user| %>
            <li class="media">
                <%= image_tag 'user-image.jpg' class: 'mr-2 rounded' %>
                <div class="media-body">
                    <div>
                        <%= user.name %>
                    </div>
                    <div>
                        <p><%= link_to 'View profile', user_path(user) %></p>
                    </div>
                </div>
            </li>
        <% end %>
    </ul>
    <%= paginate users %>
<% end %>
