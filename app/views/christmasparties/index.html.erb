                        <div><%= link_to '・上南戦', jounan_path, class: 'side-letter' %></div>
                        <div><%= link_to '・サマーキャンプ', summer_camp_path, class: 'side-letter' %></div>
                        <div><%= link_to '・ハロウィンパーティー', halloween_party_path, class: 'side-letter' %></div>
                        <div><%= link_to '・学祭', nanzan_festival_path, class: 'side-letter' %></div>
                        <div class="active"><%= link_to '・クリスマスパーティー', christmas_party_path, class: 'side-letter' %></div>
                        <div><%= link_to '・追いコン', farewell_party_path, class: 'side-letter' %></div>
                    </div>
