    ['国際教養' , 6 ],
    ['経済' , 1 ],
    ['経営' ,  1 ],
    ['法律' , 1 ],
    ['総合政策' , 1],
    ['人文' , 1 ]
  ]);
 
   
    // オプションの設定
  var options = {
    title: 'Guideセクションの学部別算出  ( 単位：% )',
    is3D: true
  };          
              
           
    
                  
    // 指定されたIDの要素に円グラフを作成
  var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
      
  // グラフの描画
