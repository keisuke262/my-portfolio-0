<div class="container" id="content_border">
  <div class="text-center">
    <h1>Log in</h1>
  </div>
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
    <!--modelがないフォームではmodel:ではなく、url:を使う-->
    <!--scope: :sessonとすることで、全てのフォームデータが:sessionの中に入る-->
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name, class: 'form-control pt-4 pb-4' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Password' %>
          <%= f.password_field :password, class: 'form-control pt-4 pb-4' %>
        </div>
        <%= f.submit 'Log in', class: 'btn btn-primary btn-block pt-3 pb-3 mt-4' %>
      <% end %>
  </div>
</div>